#! /bin/sh
pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor eDP-1-1 -d I II III IV V
bspc monitor HDMI-1-2 -d VI VII VIII IX X

bspc config border_width        8 
bspc config window_gap          10
bspc config focused_border_color "#665c54"
bspc config normal_border_color "#3c3836"
bspc config active_border_color "#282828"
bspc config top_padding 23 
bspc config focus_follows_pointer true

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc rule -a Emacs state=tiled
bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
/home/beltza/.config/bspwm/autorun.sh
xsetroot -cursor_name left_ptr
killall -q sxhkd
sxhkd
